{
  "name": "git-anon",
  "version": "0.3.0",
  "description": "Track personal commit statistics without sharing company code",
  "author": "3urobeat",
  "license": "GPL-3.0",
  "homepage": "https://github.com/3urobeat",
  "repository": "https://github.com/3urobeat/git-anon",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev --host 0.0.0.0",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "start": "node .output/server/index.mjs",
    "update": "git pull && npm i && npm run build",
    "docker-build": "docker build -t git-anon .",
    "docker-start": "docker run -p 3000:3000 -v ~/git-anon-data:/usr/src/git-anon/data git-anon",
    "docker-bs": "npm run docker-build && npm run docker-start"
  },
  "keywords": [
    "git",
    "anonymous"
  ],
  "bugs": {
    "url": "https://github.com/3urobeat/git-anon/issues"
  },
  "dependencies": {
    "@nuxtjs/device": "^3.1.1",
    "@nuxtjs/tailwindcss": "^6.12.0",
    "@phosphor-icons/vue": "^2.2.1",
    "@seald-io/nedb": "^4.0.4",
    "ini": "^4.1.2",
    "nuxt": "^3.11.2",
    "simple-git": "^3.24.0"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@types/ini": "^4.1.0",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "@vueuse/core": "^10.9.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-jsdoc": "^48.2.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.4.5"
  }
}
